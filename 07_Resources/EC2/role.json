{
	"EC2Role": {
		"Type": "AWS::IAM::Role",
		"Properties": {
			"RoleName": { "Fn::Sub": "rsyslog-server-${AWS::StackName}" },
			"AssumeRolePolicyDocument": {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Effect": "Allow",
						"Principal": {
							"Service": "ec2.amazonaws.com"
						},
						"Action": "sts:AssumeRole"
					}
				]
			}
		}
	}
}